{
  "name": "events-manager",
  "version": "1.0.0",
  "description": "manage applications to your event facilities",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/babel src -d lib",
    "dev": "nodemon ./bin/www --exec babel-node",
    "eslint": "./node_modules/.bin/eslint app.js",
    "nodemon": "nodemon ./bin/www",
    "test:db": "cross-env NODE_ENV=test sequelize db:migrate:undo:all &&cross-env NODE_ENV=test sequelize db:migrate",
    "test": "npm run test:db &&cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 250000 ./server/test --compilers js:babel-core/register --exit",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo:all",
    "seed:create": "sequelize seed:generate --name",
    "seed": "sequelize db:seed:all",
    "seed:undo": "sequelize db:seed:undo:all",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d3mola/Events-Manager.git"
  },
  "keywords": [
    "express",
    "postgres",
    "sequelize",
    "node"
  ],
  "author": "Ademola Ariya",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/d3mola/Events-Manager/issues"
  },
  "homepage": "https://github.com/d3mola/Events-Manager#readme",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cross-env": "^5.1.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.1.0",
    "mocha": "^4.0.1",
    "morgan": "^1.9.0",
    "pg": "^7.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.22.7",
    "sequelize-cli": "^3.0.0",
    "supertest": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "supertest": "^3.0.0"
  }
}
